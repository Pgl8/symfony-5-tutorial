{% extends 'base.html.twig' %}

{% block title %}Hello UserRegisterController!{% endblock %}

{% block body %}
<style>
    .form-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .form-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="message-wrapper">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
</div>
<div class="form-wrapper">
    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}

    {{ form_row(form.submit, { 'label': 'Submit' }) }}
    {{ form_end(form) }}
</div>
{% endblock %}
